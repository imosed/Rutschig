@{
    ViewData["Title"] = "Home";
}

<div>
    <div class="form-group">
        <div class="col-3"><label for="" class="form-label text-large">Shorten</label></div>
        <div class="col-12"><input type="text" id="url" name="url" class="form-input input-lg"></div>
    </div>
    <div class="form-group">
        <div class="col-3"><label for="" class="form-label text-large">PIN</label></div>
        <div class="col-12"><input type="text" id="pin" name="pin" class="form-input input-lg"></div>
    </div>
    <div class="form-group">
        <div class="col-3"><label for="" class="form-label text-large">Expiration</label></div>
        <div class="col-12"><input type="date" id="expiration" name="expiration" class="form-input input-lg"></div>
    </div>
    <button onclick="shorten(
        document.querySelector('#url').value,
        document.querySelector('#pin').value,
        document.querySelector('#expiration').value
    )" class="btn btn-lg">Submit</button>
</div>