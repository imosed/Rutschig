@inject AppConfig _appConfig

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <meta name="description" content="A URL shortening service with expirations and PINs"/>
    <meta name="robots" content="index, nofollow"/>
    <title>@ViewData["Title"] - @(_appConfig.GetValue<string>("AppName"))</title>
    <link rel="stylesheet" href="https://fonts.cdnfonts.com/css/bitter" media="screen">
    <link rel="stylesheet" href="https://fonts.cdnfonts.com/css/molengo" media="screen">
    <link rel="stylesheet" href="~/css/site.css"/>
</head>
<body>
<nav class="navbar">
    <a href="/" class="brand">@(_appConfig.GetValue<string>("AppName"))</a>
</nav>
<div class="container">
    @RenderBody()
</div>

<footer class="footer">
    &copy; 2021 - Rutschig
</footer>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", false)
</body>
</html>